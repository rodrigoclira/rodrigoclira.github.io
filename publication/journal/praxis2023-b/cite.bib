	title = {POPULARIZAÇÃO E DEMOCRATIZAÇÃO DA INTELIGÊNCIA ARTIFICIAL NO NORDESTE BRASILEIRO: UM RELATO DE EXPERIÊNCIA},
	journal = {Revista Práxis: saberes da extensão},
