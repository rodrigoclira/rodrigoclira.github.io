	author = {Herculano Patreszer e Viviane Tavares da Silva e Rodrigo Lira da Silva},
	title = {UM RELATO SOBRE A CRIAÇÃO DE UM CLUBE DE XADREZ NO CAMPUS PALMARES DO IFPE},
	journal = {Revista Práxis: saberes da extensão},
	volume = {11},
